@model WowPay.Models.Entities.Person;

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Person Details</h2>

        <form method="post" enctype="multipart/fprm-data">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable" for="Id">ID</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="Id" value="@Model.Id" readonly />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable" for="Name">Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="Name" value="@Model.Name" readonly />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable" for="Email">Email</label>
                <div class="col-sm-8">
                    <input type="email" class="form-control" id="Email" value="@Model.Email" readonly />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable" for="Phone">Phone</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="Phone" value="@Model.Phone" readonly />
                </div>
            </div>
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-lable" for="Address">Address</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="Address" value="@Model.Address" readonly />
                    </div>
                </div>


            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <a class="btn btn-primary btn-sm" asp-controller="Persons" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                </div>
                <div class="col-sm-4 d-grid">
                    <a asp-action="List" asp-controller="Persons" class="btn btn-secondary">Back to List</a>
                </div>

            </div>

               
        </form>

        </<div>
        </div>
